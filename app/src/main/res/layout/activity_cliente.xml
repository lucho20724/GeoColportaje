<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.ActivitiesPrincipales.planillaActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:text="Clientes"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btnCrearCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:onClick="onClick"
            android:text="Nuevo Cliente"
            android:textAlignment="center"
            android:drawableLeft="@drawable/icononuevo"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnEditarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Cliente"
            android:onClick="onClick"
            android:drawableLeft="@drawable/iconomodificar"
            android:gravity="left|center_vertical"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/btnCrearCliente"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnEliminarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:onClick="onClick"
            android:text="Eliminar Cliente"
            android:textAlignment="center"
            android:drawableLeft="@drawable/iconoeliminar"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/btnVerCliente"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnVerCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Revisar Cliente"
            android:textAlignment="center"
            android:drawableLeft="@drawable/iconover"
            android:gravity="left|center_vertical"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/btnEditarCliente"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
