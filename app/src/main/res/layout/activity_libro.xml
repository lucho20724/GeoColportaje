<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.libroActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnEditarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnNuevoLibro"
            android:layout_marginTop="31dp"
            android:onClick="onClick"
            android:text="Editar Libro" />

        <Button
            android:id="@+id/btnNuevoLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:onClick="onClick"
            android:text="Nuevo Libro" />

        <Button
            android:id="@+id/btnEliminarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEditarLibro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:onClick="onClick"
            android:text="Eliminar Libro" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>