<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.ActivitiesPrincipales.planillaActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnCrearPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:onClick="onClick"
            android:text="Crear Planilla Diaria"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/icononuevo"
            android:gravity="left|center_vertical"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnEditarPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Editar Planilla"
            android:textAlignment="center"
            android:onClick="onClick"
            android:drawableLeft="@drawable/iconomodificar"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/btnCrearPlanilla"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnEliminarPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:onClick="onClick"
            android:text="Eliminar Plantilla"
            android:textAlignment="center"
            android:layout_below="@+id/btnEditarPlanilla"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/iconoeliminar"
            android:gravity="left|center_vertical"
            android:layout_alignEnd="@+id/btnEditarPlanilla" />

        <Button
            android:id="@+id/btnVerPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Revisar Planilla"
            android:textAlignment="center"
            android:drawableLeft="@drawable/iconover"
            android:gravity="left|center_vertical"
            android:layout_marginTop="47dp"
            android:layout_below="@+id/btnEliminarPlanilla"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:text="Planillas"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
