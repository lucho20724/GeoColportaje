<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.FormulariosCreacion.nuevaplanillaActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="356dp"
        android:layout_height="491dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/ckHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_toStartOf="@+id/textView11"
            android:text="Fecha Actual"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btnGuardarPlanilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnCancelar"
            android:layout_alignBottom="@+id/btnCancelar"
            android:layout_alignEnd="@+id/scrollView2"
            android:layout_marginEnd="55dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:elevation="24dp"
            android:onClick="onClick"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="61dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:elevation="24dp"
            android:onClick="onClick"
            android:text="Cancelar" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planilla de Control"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="354dp"
            android:layout_height="351dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edHorasPresentacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Horas de presentacion"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edHorasEntrega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Horas de entrega"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edPresentaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cantidad de presentaciones"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edSuscripciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cantidad de suscripciones"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edFolletos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cantidad de folletos"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edOraciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cantidad de oriaciones"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edVentas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cantidad de ventas"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edDia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Dia"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edMes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mes"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edAnio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="AÃ±o"
                    android:inputType="number" />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
