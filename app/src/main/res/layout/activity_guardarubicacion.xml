<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.guardarubicacionActivity">

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="508dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-5dp">

        <Button
            android:id="@+id/btnPrueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:onClick="onClick"
            android:text="Prueba"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="362dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnPrueba"
            android:layout_alignStart="@+id/btnPrueba"
            android:layout_marginBottom="21dp"
            android:onClick="onClick"
            android:text="Guardar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="362dp" />

        <EditText
            android:id="@+id/campoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="Descripcion"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/campoDescripcion" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
