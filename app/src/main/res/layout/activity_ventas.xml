<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uap.geocolportaje.geocoportaje.ActivitiesPrincipales.libroActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:text="Ventas"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btnVerVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnNuevaVenta"
            android:layout_marginTop="39dp"
            android:drawableLeft="@drawable/iconover"
            android:gravity="left|center_vertical"
            android:onClick="onClick"
            android:text="Revisar Venta"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnNuevaVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:onClick="onClick"
            android:text="Nueva Venta"
            android:textAlignment="center"
            android:drawableLeft="@drawable/icononuevo"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnEliminarVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:onClick="onClick"
            android:text="Eliminar Venta"
            android:textAlignment="center"
            android:layout_below="@+id/btnNuevaVenta"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/iconoeliminar"
            android:gravity="left|center_vertical"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>